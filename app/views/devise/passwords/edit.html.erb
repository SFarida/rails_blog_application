<div class="container-fluid d-flex flex-column justify-content-center auth_container shadow-sm bg-body-tertiary rounded">
  <h2>Change your password</h2>

  <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>
    <%= f.hidden_field :reset_password_token %>

    <div class="field field_input">
      <% if @minimum_password_length %>
        <em>(<%= @minimum_password_length %> characters minimum)</em><br />
      <% end %>
      <%= f.password_field :password, autofocus: true, placeholder: "New password", autocomplete: "new-password" %>
    </div>
    <br>
    <div class="field field_input">
      <%= f.password_field :password_confirmation, placeholder: "Confirm new password", autocomplete: "new-password" %>
    </div>
    <br>
    <div class="actions text-center submit">
      <%= f.submit "Change my password" %>
    </div>
  <% end %>

