<div class="container-fluid d-flex flex-column justify-content-center auth_container shadow-sm bg-body-tertiary rounded">
  <h2>Forgot your password?</h2>

  <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>

    <div class="field field_input">
      <%= f.email_field :email, placeholder: "Email", autofocus: true, autocomplete: "email" %>
    </div>
    <br>
    <div class="actions text-center submit">
      <%= f.submit "Send me reset password instructions" %>
    </div>
  <% end %>
  <%= render "devise/shared/links" %>
</div>
