<div class="container-fluid d-flex flex-column justify-content-center auth_container shadow-sm bg-body-tertiary rounded">
  <h2>Sign up</h2>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>

    <div class="field field_input">
      <br />
      <%= f.text_field :name, autofocus: true, placeholder:"Name", autocomplete: "name" %>
    </div>

    <div class="field field_input">
      <br />
      <%= f.email_field :email, autofocus: true, placeholder:"Email", autocomplete: "email" %>
    </div>

    <div class="field field_input">
      <% if @minimum_password_length %>
      <em>(<%= @minimum_password_length %> characters minimum)</em>
      <% end %><br />
      <%= f.password_field :password, placeholder:"Password", autocomplete: "new-password" %>
    </div>

    <div class="field field_input">
      <br />
      <%= f.password_field :password_confirmation, placeholder:"Password confirmation", autocomplete: "new-password" %>
    </div>
    <br>
    <div class="actions submit">
      <%= f.submit "Sign up" %>
    </div>
  <% end %>
  <%= render "devise/shared/links" %>
</div>
